<Page x:Class="CheckDyslexia.PointTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CheckDyslexia"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PointTestPage">

    <Canvas Background="Black" x:Name="Canvas">

        <Button x:Name="PBStart"  Click="PBStart_Click" Style="{StaticResource buttonStyle}" Height="Auto" Margin="28,115,335,69.8" Width="37" RenderTransformOrigin="0.072,0.553" >
            Start
        </Button>

        <Button x:Name="PBFinish"  Click="PBFinish_Click" Style="{StaticResource buttonStyle}" Height="Auto" Margin="28,450,335,69.8" Width="37" RenderTransformOrigin="0.072,0.553"  IsEnabled="False">
            Finish
        </Button>

    </Canvas>
</Page>
