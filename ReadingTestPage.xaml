<Page x:Class="CheckDyslexia.ReadingTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CheckDyslexia"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReadingTestPage">

    <Canvas x:Name="ReadingCanvas">
        <Canvas.Background>
            <ImageBrush ImageSource="C:\prog\CheckDyslexia\monte.jpg" Stretch="UniformToFill"/>
        </Canvas.Background>

        <Button x:Name="BStart"  Click="Button_Start_Click" Style="{StaticResource buttonStyle}" Height="Auto" Margin="25,30,330,70" Width="38" RenderTransformOrigin="0.072,0.553" >
            Start
        </Button>

        <Button x:Name="BStop"  Click="Button_Stop_Click" Style="{StaticResource buttonStyle}" Height="Auto" Margin="0" RenderTransformOrigin="0.61,5.315" Width="50" Grid.Row="2" IsEnabled="False" Canvas.Left="417" Canvas.Top="663">
            Stop
        </Button>

    </Canvas>
</Page>
